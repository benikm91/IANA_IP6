<launch>

	<node name="fovis_mono_depth_odometer" pkg="fovis_ros" type="fovis_mono_depth_odometer">
		<param name="~odom_frame_id" type="str" value="base_link" />
		<param name="~base_link_frame_id" type="str" value="odom" />	
		<remap from="/camera/rgb/image_rect" to="/kinect2/hd/image_color_rect"/>
		<remap from="/camera/depth_registered/image_rect" to="/kinect2/sd/image_depth"/>
		<remap from="/camera/rgb/camera_info" to="/kinect2/hd/camera_info"/>
		<remap from="/camera/depth_registered/camera_info" to="/kinect2/sd/camera_info"/>
	</node>

	<include file="$(find gmapping)/launch/slam_gmapping_pr2.launch" />

</launch>
